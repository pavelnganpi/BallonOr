<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.paveynganpi.ballonor.ui.CreatePostActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createPostTextField"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:hint="What&apos;s happening?"
        android:maxLength="140"
        android:autoText="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textColor="@color/androidWhite"
        android:id="@+id/createPostButton"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:background="@color/colorPrimary"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/createPostTextField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="140"
        android:id="@+id/createPostCounterTextView"
        android:layout_below="@+id/createPostTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="3.5dp"
        android:layout_marginStart="3.5dp"/>
</RelativeLayout>
