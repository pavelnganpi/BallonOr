<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.paveynganpi.ballonor.ui.CreatePostActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createPostTextField"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:hint="What&apos;s happening?"
        android:maxLength="140"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/createPostButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/createPostTextField"
        android:layout_alignEnd="@+id/createPostTextField"
        android:layout_marginBottom="35dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:background="#2196F3"/>
</RelativeLayout>
